{
	"name": "shopify_template",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "npm run generate && npm run build:css && next dev",
		"build": "npm run generate:menu && next build",
		"start": "next start",
		"build:css": "tailwind build styles/main.css -o styles/compiled.css",
		"generate": "graphql-codegen --config codegen.js",
		"generate:watch": "npm run generate -- --watch",
		"generate:menu": "node menu/generate.js"
	},
	"dependencies": {
		"@apollo/client": "^3.3.11",
		"@reduxjs/toolkit": "^1.5.0",
		"axios": "^0.21.1",
		"js-cookie": "^2.2.1",
		"next": "10.0.7",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"react-icons": "^4.2.0",
		"react-redux": "^7.2.2",
		"react-slick": "^0.28.0",
		"react-transition-group": "^4.4.1",
		"slick-carousel": "^1.8.1"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^1.21.1",
		"@graphql-codegen/typescript-operations": "^1.17.14",
		"@graphql-codegen/typescript-react-apollo": "^2.2.1",
		"@types/js-cookie": "^2.2.6",
		"@types/node": "^14.14.31",
		"@types/react": "^17.0.2",
		"@types/react-redux": "^7.1.16",
		"@types/react-slick": "^0.23.4",
		"@types/react-transition-group": "^4.4.1",
		"autoprefixer": "^10.2.4",
		"postcss": "^8.2.6",
		"tailwindcss": "^2.0.3",
		"typescript": "^4.2.2"
	}
}
